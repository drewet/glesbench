CC=g++
INCLUDES=-I/opt/PalmPDK/include -I/opt/PalmPDK/include/SDL
CFLAGS=-c $(INCLUDES)
OBJS=main.o sdl.o clear_screen.o
LIBS=-lSDL -lGLESv2 -lpdl
LDFLAGS=-L/opt/PalmPDK/host/lib $(LIBS)

all: clear_screen

clear_screen: $(OBJS)
	$(CC) $(OBJS) $(LDFLAGS) -o clear_screen 
    
main.o: ../sdl/main.cpp
	$(CC) $(CFLAGS) ../sdl/main.cpp
	
sdl.o: ../sdl/sdl.cpp
	$(CC) $(CFLAGS) ../sdl/sdl.cpp

clear_screen.o: clear_screen.cpp ../ogl_es.h
	$(CC) $(CFLAGS) clear_screen.cpp
    
clean:
	rm -rf *.o clear_screen
